`timescale 1ns / 1ps

module charToIdx(
	output reg [7:0] idx,
	input [7:0] ascii
);

always @(ascii)
	case (ascii)
		97: idx = 0;
		98: idx = 1;
		99: idx = 2;
		100: idx = 3;
		101: idx = 4;
		102: idx = 5;
		103: idx = 6;
